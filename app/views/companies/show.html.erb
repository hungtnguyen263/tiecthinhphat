<!-- Page header -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><a href="<%= admins_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Quản lý</span> - Thông tin</h4>
        </div>
    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="<%= admins_path %>"><i class="icon-home2 position-left"></i> Trang chủ</a></li>
            <li><a href="<%= companies_path %>">Thông tin công ty</a></li>
            <li><a href="<%= companies_path %>">Quản lý thông tin công ty</a></li>
            <li class="active"><%= @company.name %></li>
        </ul>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title"><span class="text-semibold"><%= @company.name %></span></h5>
            
            <%= content_tag(:p, class: "color-red") do %>
              <%= notice %>
            <% end %>
        
            <form class="form-horizontal" role="form">
               
				<div class="form-group">
					<%= label "", "Logo: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= image_tag(@company.image_url, size: "250x150", alt: "Hình ảnh", class: "img-rouded") %>
                    </div>
                </div>
				
                <div class="form-group">
                    <%= label "", "Tên công ty: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.name %>
                        <% end %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= label "", "Địa chỉ 1: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.address %>
                        <% end %>
                    </div>
                </div>
					
				<div class="form-group">
                    <%= label "", "Địa chỉ 2: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.address_1 %>
                        <% end %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= label "", "Email: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.email %>
                        <% end %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= label "", "Điện thoại 1: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.phone_1 %>
                        <% end %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= label "", "Điện thoại 2: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.phone_2 %>
                        <% end %>
                    </div>
                </div>
                
                <div class="form-group">
                    <%= label "", "Giới thiệu: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.intro %>
                        <% end %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= label "", "Giới thiệu: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @company.description.html_safe %>
                        <% end %>
                    </div>
                </div>
					
                <div class="form-group">
                    <%= label "", "Ngày tạo: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static") do %>
                          <%= @company.created_at.strftime("%d/%m/%Y") %>
                        <% end %>
                    </div>
                </div>
            </form>
        
            <%= link_to '<i class="icon-backward2 position-left"></i> Trở về'.html_safe, companies_path, class: "btn btn-primary" %>
            
        </div>
    </div>

    <!-- Footer -->
	<div class="footer text-muted">
		Copyright &copy; 2016 - Dịch Vụ Tiệc Thịnh Phát.
	</div>
	<!-- /footer -->

</div>
<!-- /content area -->

<!-- Theme JS files -->
<%= javascript_include_tag '/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/assets/js/core/app.js' %>
<!-- /theme JS files -->