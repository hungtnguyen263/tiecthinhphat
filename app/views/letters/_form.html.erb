<% if @letter.errors.any? %>
    <div id="error_explanation">
        <% @letter.errors.full_messages.each do |message| %>
            <span class="label label-warning"><%= message %></span>
        <% end %>
        <hr/>
    </div>
<% end %>

<%= form_for @letter, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
        <%= f.label "Hình ảnh/Logo Công ty: ", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.file_field :image_url, class: "file-styled" %>
          <span class="help-block">Chấp nhận định dạng: gif, png, jpg. Kích thước tối đa 2Mb</span>
          <%= image_tag(@letter.image_url, size: "250x150", alt: "Hình ảnh", class: "img-rouded") %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label "Tiêu đề: ", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_field :title, placeholder: "Tên tiêu đề (VD: THƯ NGỎ, KHUYẾN MÃI,...)", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group field">
            <%= f.label "Nội dung bài viết: ", class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= f.text_area :content, rows: "4", cols: "4", id: "editor-full" %>
            </div>
        </div>

    <div class="text-right">
        <button type="submit" class="btn btn-success">Lưu <i class="icon-plus22 position-right"></i></button>
    </div>
<% end %>

