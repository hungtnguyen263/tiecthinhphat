<!-- Page header -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><a href="<%= admins_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Quản lý</span> - Dịch vụ</h4>
        </div>
    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="<%= admins_path %>"><i class="icon-home2 position-left"></i> Trang chủ</a></li>
            <li><a href="<%= services_path %>">Dịch vụ</a></li>
            <li class="active">Quản lý dịch vụ</li>
        </ul>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">

    <!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Danh sách - <span class="text-semibold">Dịch vụ</span></h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        
        <table class="table datatable-service">
            <thead>
                <tr>
					<th>Hình ảnh</th>
                    <th>Tiêu đề</th>
                    <th>Nội dung</th>
                    <th>Ngày tạo</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <% @services.each do |item| %>
                    <tr>
						<td><div class="media-left">
							<img src="<%= item.image_url if item.image_url? %>" style="width: 82px; height: 56px;" class="img-rounded" alt="">
						</div></td>
                        <td>
							<%= link_to (truncate(strip_tags(item.title), length: 40)), item %>
						</td>
                        <td>
							<%= content_tag(:p, class: "form-control-static text-justify") do %>
								<%= (item.content).html_safe %>
							<% end %>
						</td>
                        <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                        <td class="text-center">
                            <ul class="icons-list">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>
    
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-edit"></i> Chỉnh sửa'.html_safe, edit_service_path(item) %>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <!-- /basic datatable -->

    <!-- Footer -->
	<div class="footer text-muted">
		Copyright &copy; 2016 - Dịch Vụ Tiệc Thịnh Phát.
	</div>
	<!-- /footer -->

</div>
<!-- /content area -->

<!-- Theme JS files -->
<%= javascript_include_tag '/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/assets/js/core/app.js' %>
<%= javascript_include_tag '/javascripts/datatables_service.js' %>
<!-- /theme JS files -->